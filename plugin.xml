<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="cn.edu.jfcs.app.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="cn.edu.jfcs.perspective"
            class="cn.edu.jfcs.app.Perspective"
            id="cn.edu.jfcs.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="cn.edu.jfcs.application"
            name="jfcs">
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            id="cn.edu.jfcs.intro">
      </intro>
      <introProductBinding
            introId="cn.edu.jfcs.intro"
            productId="cn.edu.jfcs.product">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            introId="cn.edu.jfcs.intro"
            content="introContent.xml"
            id="cn.edu.jfcs.configId">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx">
            </implementation>
         </presentation>
      </config>
   </extension>
<extension
point= "org.eclipse.ui.actionSets">
<actionSet
id= " cn.edu.jfcs.actionSet"
label="Sample Action Set"
visible="true">
<menu
id="sampleMenu"
label="扩展点测试">
<separator name= " sampleGroup"/>
</menu>
<action
class= "cn.edu.jfcs.actions.SampleAction"
icon="icons/sample.gif "
id= " cn.edu.jfcs.actions.SampleAction"
label="单击测试"
menubarPath="sampleMenu/sampleGroup"
toolbarPath= "sampleGroup"/>
</actionSet>
</extension>
</plugin>
